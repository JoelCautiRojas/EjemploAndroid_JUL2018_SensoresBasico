<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgramadoresPeruanosTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorProgramadoresPeruanosPrimary</item>
        <item name="colorPrimaryDark">@color/colorProgramadoresPeruanosPrimaryDark</item>
        <item name="colorAccent">@color/colorProgramadoresPeruanosAccent</item>
    </style>

    <style name="ProgramadoresPeruanosTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProgramadoresPeruanosTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ProgramadoresPeruanosTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
