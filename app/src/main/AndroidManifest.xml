<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.programadoresperuanos.www.ejemploandroid_jul2018_sensoresbasico">

    <uses-permission android:name="android.permission.BODY_SENSORS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icono_programadoresperuanos"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/ProgramadoresPeruanosTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main2Activity"
            android:label="Sensores en Android"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Main3Activity"
            android:label="Mis Sensores"
            android:screenOrientation="portrait" />
        <activity
            android:screenOrientation="portrait"
            android:label="Acerca de Nosotros"
            android:name=".Main4Activity" />
    </application>

</manifest>